extends layout

block content
    div.container
        form.login-form(ng-submit="login()",novalidate,name='loginForm',ng-controller='welcomeLoginCtrl')
            div.alert-panel
                div.alert.alert-danger(ng-cloak,ng-show='loginSign') {{loginSign}}
                div.alert.alert-danger(ng-cloak,ng-show='(loginForm.pwd.$error.maxlength || loginForm.pwd.$error.minlength) && runValidate')  密码长度必须为6-12位
                div.alert.alert-danger(ng-cloak,ng-show='(loginForm.name.$error.maxlength || loginForm.name.$error.minlength) && runValidate')  用户名长度必须为在3-10位
                div.alert.alert-danger(ng-cloak,ng-show='loginForm.pwd.$error.required && runValidate')  密码不能为空
                div.alert.alert-danger(ng-cloak,ng-show='loginForm.name.$error.required && runValidate')  用户名不能为空

            input.form-control(name='name',autocomplete="off",required,ng-maxlength=10,ng-minlength=3,type='text',placeholder='登录名',ng-model='name')
            input.form-control(name='pwd',autocomplete="off",required,ng-maxlength=12,ng-minlength=6,type='password',placeholder='密码',ng-model='pwd')
            a.pull-left(href='www.baidu.com') 注册
            label.checkbox.pull-right
                input(type='checkbox')
                | 记住密码
            button.btn.btn-primary.btn-block.btn-lg(ng-disabled='runValidate && !loginForm.$valid',type='submit') 登录


